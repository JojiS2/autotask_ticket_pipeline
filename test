from dotenv import load_dotenv
import os

# Build path to `.env` in the autotask_pipeline folder
BASE_DIR = os.path.dirname(os.path.abspath(__file__))
dotenv_path = os.path.join(BASE_DIR, ".env")
print(BASE_DIR)
print(dotenv_path)

# Load it
load_dotenv(dotenv_path)

print("USERNAME:", os.getenv("AUTOTASK_USERNAME"))
print("PASSWORD length:", len(os.getenv("AUTOTASK_PASSWORD") or ""))
print("INTEGRATION CODE:", os.getenv("AUTOTASK_TRACKING_IDENTIFIER"))
print("ZONE:", os.getenv("AUTOTASK_API_ZONE"))